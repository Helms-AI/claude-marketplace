{
  "name": "notify-slack",
  "description": "Send Slack notifications on specific Claude actions",
  "author": "platform-team",
  "version": "1.0.0",
  "hooks": [
    {
      "event": "PostToolUse",
      "matcher": {
        "tool": "Bash",
        "command_pattern": "git push"
      },
      "command": "./scripts/notify-slack.sh 'Code pushed to repository'",
      "timeout": 10000,
      "onFailure": "ignore"
    }
  ],
  "scripts": {
    "notify-slack.sh": "#!/bin/bash\nMESSAGE=\"$1\"\ncurl -s -X POST \"$SLACK_WEBHOOK_URL\" -H 'Content-type: application/json' --data \"{\\\"text\\\": \\\"$MESSAGE\\\"}\""
  },
  "environment": {
    "required": ["SLACK_WEBHOOK_URL"]
  }
}
